<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#ebf1ea" />

    <TextView
        android:id="@+id/typetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/home_more"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/homeright"
        android:paddingRight="@dimen/homeright"
        android:paddingTop="12dp"
        android:background="@drawable/click_transparent_gray"
        android:textColor="@color/greentext"
        android:textSize="@dimen/textsize18" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp" >

        <com.ytrain.mutrain.view.HomeGridView
            android:id="@+id/coursesgridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="-6dp"
            android:listSelector="@null"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="-6dp" >
        </com.ytrain.mutrain.view.HomeGridView>
    </RelativeLayout>

</LinearLayout>